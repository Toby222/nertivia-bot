{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "declaration": true,

    "strict": true,
    "moduleResolution": "node",

    "outDir": "dist",
    "baseUrl": "src",
    "rootDir": "src",

    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    
    "skipLibCheck": true,    
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ]
}